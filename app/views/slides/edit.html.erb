<% if @slide.errors.any? %>
  <div class"alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label1="Close"><span aria-hidden="true">&times;</span></button>
    <h2><%= @slide.errors.count%>件のエラーがあります</h2>
    <ul style="list-style:none">
      <% @slide.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
    <h2>編集</h2>
    <%= render 'form' %>
</div>
